<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Gains & Grains Log In</title>
        <link rel="icon" type="image/png" href="/img/smalllogo.png" />
        <link rel="stylesheet" href="/css/loginSignup.css" />
        <link rel="stylesheet" href="/css/header.css" />
    </head>
    <body>
        <% if (alerts.success) { %> <% alerts.success.forEach(msg => { %>

        <div class="alert alert-success"><%= msg %></div>
        <% }) %> <% } %> <% if (alerts.error) { %> <% alerts.error.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
        <% }) %> <% } %>

        <header>
            <h2 class="logo">GAINS & GRAINS</h2>
            <img
                src="/img/smalllogo.png"
                class="small-logo"
                alt="Small Gains & Grains Logo"
                height="30px"
            />
            <nav>
                <ul class="nav_links">
                    <li><a class="navlink" href="/">Home</a></li>
                    <% if(!currentUser) { %>
                    <li><a class="navlink" href="/auth/login">Log In</a></li>
                    <li><a class="navlink" href="/auth/signup">Sign Up</a></li>
                    <% } else { %>
                    <li><a class="navlink" href="/user/dashboard">Dashboard</a></li>
                    <li><a class="navlink" href="/auth/logout">Logout</a></li>
                    <% } %>
                    <li><a class="navlink" href="#about">About</a></li>
                    <li><a class="cta cont" href="/contact">Contact</a></li>
                </ul>
            </nav>
            <p class="menu cta">Menu</p>
        </header>

        <div id="mobile_menu" class="overlay">
            <a class="close">&times;</a>
            <div class="overlay_content">
                <a href="#">Home</a>
                <% if(!currentUser) { %>
                <a href="/auth/login">Log In</a>
                <a href="/auth/signup">Sign Up</a>
                <% } else { %>
                <a href="/user/dashboard">Dashboard</a>
                <a href="/auth/logout">Logout</a>
                <% } %>
                <a href="#about">About</a>
                <a href="/contact">Contact</a>
            </div>
        </div>

        <section class="contact" id="contact">
            <h2 class="heading"><span>Login!</span></h2>

            <form action="/auth/login" method="POST">
                <div class="input-box">
                    <input type="email" placeholder="Email" name="email" />
                    <input type="password" placeholder="Password" name="password" />
                </div>
                <input type="submit" value="Login" class="btn" />
            </form>
        </section>

        <script src="/js/mobilemenu.js"></script>
    </body>
</html>
